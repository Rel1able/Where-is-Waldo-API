generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Character {
  id          Int     @id @default(autoincrement())
  name        String
  found       Boolean @default(false)
  coordinates Json
}

model Player {
  id       Int    @id @default(autoincrement())
  name     String @unique
  bestTime Float
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}
